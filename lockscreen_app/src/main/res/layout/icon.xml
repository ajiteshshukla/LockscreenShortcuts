<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lockscreen_button_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageView
        android:id="@+id/lsIcon"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:background="@drawable/long_strip"/>

    <RelativeLayout
        android:id="@+id/layoutText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="6dp"
        android:background="@color/dark_translucent">
        <ImageView
                android:id="@+id/appicon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
        <ImageView
                android:id="@+id/appicon2"
                android:layout_toRightOf="@+id/appicon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
        <ImageView
                android:id="@+id/appicon3"
                android:layout_toRightOf="@+id/appicon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
        <ImageView
                android:id="@+id/appicon4"
                android:layout_toRightOf="@+id/appicon3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
        <ImageView
                android:id="@+id/appicon5"
                android:layout_toRightOf="@+id/appicon4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
        <ImageView
                android:id="@+id/appicon6"
                android:layout_toRightOf="@+id/appicon5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/lsIconRight"
            android:layout_width="5dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:background="@drawable/long_strip"/>

</LinearLayout>