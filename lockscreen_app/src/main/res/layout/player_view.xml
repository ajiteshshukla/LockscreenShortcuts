<?xml version="1.0" encoding="utf-8"?>
<com.google.android.exoplayer.AspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_gravity="center">

    <TextureView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <FrameLayout
        android:id="@+id/controlsOverlayFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@null">

        <RelativeLayout
            android:id="@+id/controlsOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btnVolumeControl"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/mute" />

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/pause_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gray_gradient_bottom"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/playerSeek"
                    style="@android:style/Widget.Holo.SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFF"
                    android:max="10" />

                <SeekBar
                    android:id="@+id/volumeSeek"
                    style="@android:style/Widget.Holo.SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFF"
                    android:max="100"
                    android:progressTint="#008800"
                    android:thumb="@null"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="10"
                    android:textColor="#FFF" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</com.google.android.exoplayer.AspectRatioFrameLayout>



