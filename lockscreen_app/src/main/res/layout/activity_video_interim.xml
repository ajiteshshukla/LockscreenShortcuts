<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/outsideAppInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_translucent">
    <RelativeLayout
            android:id="@+id/rlCompAd"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:padding="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            android:background="@null">
        <ImageView
                android:id="@+id/closeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginBottom="4dp"
                android:src="@drawable/btn_close"/>
        <FrameLayout
                android:id="@+id/llVideoInterim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_white_border"
                android:layout_below="@+id/closeButton">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_top_right="5dp"
                android:scaleType="fitStart"
                app:riv_oval="false"
                android:padding="0dp"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp"
                android:background="@drawable/play_video"/>
            <TextView
                android:id="@+id/txtLandscapeMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="5dp"
                android:textColor="#4a4a4a"
                android:fontFamily="sans-serif-light"
                android:text="The video will play in landscape mode"/>
            <RelativeLayout android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                android:background="@null"
                android:layout_gravity="bottom"
                android:paddingBottom="20dp">
                <ImageView android:layout_width="46dp"
                           android:layout_height="35dp"
                           android:layout_centerHorizontal="true"
                           android:id="@+id/imgBrandIcon"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:layout_below="@+id/imgBrandIcon"
                          android:id="@+id/brandTitle"
                    android:fontFamily="sans-serif"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:layout_below="@+id/brandTitle"
                          android:id="@+id/brandHeadline"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="22sp"
                    android:textColor="#4a4a4a"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>