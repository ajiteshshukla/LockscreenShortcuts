<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/outsideAppInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_translucent">

    <RelativeLayout android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="#00000000"
                    android:orientation="horizontal"
                    android:id="@+id/layout_cta">
        <VideoView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/VideoView" />

        <!-- imageview for close icon-->
        <ImageView android:layout_width="15dp"
                   android:layout_height="18dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="26dp"
                   android:layout_marginTop="23dp"
                   android:id="@+id/close"
                   android:background="@drawable/page_1"/>

        <!-- imageview for cta-->
        <Button android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="26dp"
                android:layout_marginTop="23dp"
                android:id="@+id/cta_text"
                android:textColor="#FFFFFF"
                android:background="@drawable/rectangle_34"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2000000"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    android:id="@+id/resumeReplay">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="120dp"
                      android:id="@+id/resumeReplayIconText">
            <ImageView android:layout_width="30dp"
                       android:layout_height="34dp"
                       android:background="@drawable/replay"/>
            <TextView android:layout_height="26dp"
                      android:layout_width="82dp"
                      android:paddingLeft="8dp"
                      android:id="@+id/resumeReplayText"
                      android:text="Replay"
                      android:textSize="23sp"
                      android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true"
                      android:layout_marginLeft="120dp"
                      android:id="@+id/knowMore">
            <ImageView android:layout_width="30dp"
                       android:layout_height="34dp"
                       android:background="@drawable/knowinfo"/>
            <TextView android:layout_height="26dp"
                      android:layout_width="130dp"
                      android:paddingLeft="8dp"
                      android:text="Know More"
                      android:textSize="23sp"
                      android:textColor="#FFFFFF"
                      android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true"
                  android:text="Close"
                  android:textColor="#FFFFFF"
                  android:textSize="20sp"
                  android:id="@+id/closeBottom"
                  android:layout_marginBottom="90dp"/>

    </RelativeLayout>

</RelativeLayout>