<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outsideAppInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_translucent">

    <RelativeLayout
        android:id="@+id/llCompAd"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="524dp"
        android:padding="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:background="@null">
        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:src="@drawable/btn_close"/>

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@null"
            android:layout_below="@+id/closeButton">

            <RelativeLayout
                android:id="@+id/layout_heading"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/layout_red_bg"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/merchantIcon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/app_icon_bg"/>

                <TextView
                    android:id="@+id/merchantHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/merchantIcon"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Restaurants for you"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="18sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/restaurantList"
                android:background="@null">

            </android.support.v7.widget.RecyclerView>
            <Button
                android:id="@+id/show_more"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/movieList"
                android:background="@drawable/rounded_red_border"
                android:gravity="center"
                android:text="Show More"
                android:textAllCaps="false"
                android:textColor="#FFF" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layoutUnlockOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/closeButton"
            android:background="#A0000000"
            android:visibility="gone">
            <TextView
                android:id="@+id/textUnlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock to continue"
                android:layout_centerInParent="true"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>