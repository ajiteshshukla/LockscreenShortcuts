<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outsideAppInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_translucent">

    <RelativeLayout
        android:id="@+id/llCompAd"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:visibility="visible"
        android:background="@null">
        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:src="@drawable/btn_close"/>

        <LinearLayout
            android:id="@+id/relativeLayoutTaxi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_border"
            android:layout_below="@+id/closeButton">

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/layout_heading"
                android:background="@drawable/layout_blue_bg">

                <TextView
                    android:id="@+id/merchantHeading"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_centerInParent="true"
                    android:textColor="#FFF"
                    android:textSize="22sp"
                    android:gravity="left"
                    android:fontFamily="sans-serif"
                    android:text="@string/app_category"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/taxiList"
                android:layout_below="@+id/layout_heading"
                android:background="#0074BD"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/taxiList"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/merchantIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/app_icon_bg"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/merchantName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="@string/install_appname"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/merchantIcon" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layoutUnlockOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/closeButton"
            android:background="#A0000000"
            android:visibility="gone">
            <TextView
                android:id="@+id/textUnlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock to continue"
                android:layout_centerInParent="true"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>